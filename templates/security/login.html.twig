{% extends 'security/base_security.html.twig' %}

{% block sonata_wrapper %}
    <div class="login-box">
        <div class="login-logo">
            Winder <strong>Admin</strong>
        </div>

        <div class="login-box-body">
            <h4 style="text-align: center; margin-bottom: 20px;">Login</h4>

            {% if error %}
                <div class="alert alert-danger" role="alert">{{ error.message|trans({}, 'messages') }}</div>
            {% endif %}

            <form action="{{ path('admin_login') }}" method="post">

                <div class="form-group has-feedback">
                    <input class="form-control" placeholder="Login" type="text" id="username" name="_username"
                           value="{{ last_username }}" autofocus />
                </div>

                <div class="form-group has-feedback">
                    <input class="form-control" placeholder="Password" type="password" id="password" name="_password" autocomplete="off" />
                </div>

                <div class="row">
                    <div class="col-xs-4">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                        <button type="submit" class="btn btn-primary btn-block btn-flat">Login</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}